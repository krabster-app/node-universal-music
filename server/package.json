{
  "name": "@sovok/server",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run dev:watch",
    "dev:watch": "nodemon",
    "dev:nowatch": "NODE_ENV=development node -r dotenv/config -r jiti/register -r tsconfig-paths/register src/app.ts dotenv_config_path=../.env dotenv_config_debug=true",
    "build": "esbuild src/app.ts --bundle --outfile=../dist/server/app.js --target=node16 --platform=node --minify --sourcemap=inline"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "dotenv": "^16.0.3",
    "jiti": "^1.18.2",
    "nodemon": "^2.0.22"
  },
  "dependencies": {
    "@trpc/server": "^10.23.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "trpc-playground": "^1.0.4"
  }
}
